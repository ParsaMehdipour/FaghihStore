@model User.Application.Users.Commands.RegisterUser.RegisterUserCommand

<div class="auth-form shadow-around">
    <div class="site-logo">
        <a href="#">
            <img src="/images/logo.png" alt="logo">
        </a>
    </div>
    <div class="auth-form-title">
        ورود در همتا
    </div>
    <form asp-action="Register" method="post">
        <div class="form-element-row">
            <label asp-for="PhoneNumber" class="label-element">شماره موبایل</label>
            <div class="form-element-with-icon">
                <input asp-for="PhoneNumber" class="input-element">
                <i class="fad fa-mobile-alt"></i>
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-element-row">
            <label class="container-checkbox">
                <a href="#" class="link--with-border-bottom">حریم خصوصی</a> و <a href="#"
                                                                                 class="link--with-border-bottom">شرایط و قوانین</a> استفاده از سرویس های سایت
                همتا را مطالعه نموده
                و با کلیه موارد آن موافقم.
                <input type="checkbox" checked="checked">
                <span class="checkmark"></span>
            </label>
        </div>
        <div class="form-element-row text-left">
            <button class="btn-element btn-success-element">
                <i class="fad fa-user-edit"></i>
                مرحله بعد
            </button>
        </div>

    </form>
    <div class="auth-form-footer">
        <span>قبلا در همتا ثبت‌نام کرده‌اید؟</span>
        <a href="#" class="link--with-border-bottom">وارد شوید</a>
    </div>
</div>