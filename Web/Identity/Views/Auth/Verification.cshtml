@model User.Application.Users.Commands.RegisterUser.VerificationCodeDto

<div class="auth-form shadow-around">
    <div class="site-logo">
        <a href="#">
            <img src="/images/logo.png" alt="logo">
        </a>
    </div>
    <div class="auth-form-title">
        ورود در همتا
    </div>
    <form asp-action="Verification" method="post">
        <input type="hidden" asp-for="PhoneNumber"/>
        <div class="form-element-row">
            <label asp-for="VerificationCode" class="label-element">کد فعال سازی</label>
            <div class="form-element-with-icon">
                <input asp-for="VerificationCode" class="input-element">
                <i class="fad fa-mobile-alt"></i>
            </div>
            <span asp-validation-for="VerificationCode" class="text-danger"></span>
        </div>
        <div class="form-element-row text-left">
            <button class="btn-element btn-success-element">
                <i class="fad fa-user-edit"></i>
                تایید
            </button>
        </div>

    </form>
    <div class="auth-form-footer">
        <span>قبلا در همتا ثبت‌نام کرده‌اید؟</span>
        <a href="#" class="link--with-border-bottom">وارد شوید</a>
    </div>
</div>