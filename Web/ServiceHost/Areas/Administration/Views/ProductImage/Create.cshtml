@model PM.Application.ProductImages.Commands.CreateProductImage.CreateProductImageCommand
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد تصاویر جدید</h4>
</div>

<form asp-area="Administration" asp-controller="ProductImage" asp-action="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Files" class="control-label">تصاویر</label>
                    <input class="form-control" asp-for="Files">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-success waves-effect waves-light">ایجاد</button>
    </div>
</form>