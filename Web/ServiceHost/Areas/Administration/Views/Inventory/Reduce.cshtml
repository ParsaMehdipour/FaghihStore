@model Inventory.Application.Inventories.Commands.CreateInventoryOperation.CreateInventoryOperationCommand
@{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">کاهش موجودی انبار</h4>
</div>

<form asp-controller="Inventory" asp-action="Operate"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Count" class="control-label">تعداد</label>
                    <input class="form-control" asp-for="Count" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea rows="3" class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
        <input type="hidden" asp-for="OperationType" value="@Model.OperationType" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">کاهش</button>
    </div>
</form>
