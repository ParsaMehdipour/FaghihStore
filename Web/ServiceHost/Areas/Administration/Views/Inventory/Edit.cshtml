@model Inventory.Application.Inventories.Commands.EditInventory.EditInventoryCommand

@{
    ViewData["HeaderTitle"] = "ویرایش انبارداری";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش انبارداری</h4>
</div>

<form asp-area="Administration" asp-controller="Inventory" asp-action="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label">قیمت</label>
                    <input class="form-control" asp-for="UnitPrice">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="InStock" class="control-label">موجود</label>
                    <input class="form-check" asp-for="InStock">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش</button>
    </div>
</form>