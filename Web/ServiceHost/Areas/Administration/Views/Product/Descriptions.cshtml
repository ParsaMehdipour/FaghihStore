@using PM.Infrastructure.EFCore;
@model SH.Infrastructure.Criteria.ResponseModel<IEnumerable<PM.Application.ProductDescriptions.Queries.GetProductDescriptions.GetProductDescriptionDto>>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">توضیحات محصول</h4>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست توضیحات (@Model.Model.Count())</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>متن</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a identity-permission="@ShopManagementPermissionExposer.Permissions.PRODUCTDESCRIPTION_Edit" asp-controller="Product" asp-action="EditProductDescription" asp-route-productDescriptionId="@item.Id" class="btn btn-warning waves-effect waves-light m-b-5">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}