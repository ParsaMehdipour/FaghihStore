{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Symbol": "S",
  "Payment": {
    "method": "www",
    "siteUrl": "http://www.faghihstore.ir",
    "merchant": ""
  },
  "SmsSecrets": {
    "ApiKey": "",
    "SecretKey": ""
  },
  "SiteSettings": {
    "IdentitySettings": {
      //Lockout
      "AllowedForNewUsers": false,
      "DefaultLockoutTimeSpanFromMinutes": 5,
      "MaxFailedAccessAttempts": 3,

      //Password
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireNonAlphanumeric": false,
      "RequireUppercase": false,
      "RequiredLength": 8,
      "RequiredUniqueChars": 0,

      //Signin
      "RequireConfirmedAccount": false,
      "RequireConfirmedEmail": false,
      "RequireConfirmedPhoneNumber": true
    }
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Databases",
        "Uri": "/health/databases"
      },
      {
        "Name": "Endpoints",
        "Uri": "/health/endpoints"
      }
    ],
    "EvaluationTimeInSeconds": 5
  }
}