                </div>
                <div class="listing-items row">
                    @foreach (var item in Model.Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 px-0">
                            <div class="product-box">
                                <div class="product-box--thumbnail-container">
                                    <span class="product-box--specialSell"></span>
                                    <img src="@item.Picture" class="product-box--thumbnail"
                                         alt="product title">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="product-box--link"></a>
                                </div>
                                <div class="product-box--detail">
                                    <h3 class="product-box--title">
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            @item.Title
                                        </a>
                                    </h3>
                                    <div class="product-box--price-container">
                                        @* <div class="product-box--price-discount">6%</div>
                                    <div class="product-box--price">
                                    <span class="product-box--price-now">
                                    <div class="product-box--price-value">10,359,000</div>
                                    <div class="product-box--price-currency">تومان</div>
                                    </span>
                                    <span class="product-box--price-old">10,990,000</span>
                                    </div>*@
                                        <div class="product-box--price">
                                            <span class="product-box--price-now">
                                                <div class="product-box--price-value">@item.UnitPrice</div>
                                                <div class="product-box--price-currency">تومان</div>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="product-box--action">
                                        <a href="#" class="product-box--action-btn product-box--action-wishlist">
                                            <i class="fas fa-heart"></i>
                                        </a>
                                        <a href="#" class="product-box--action-btn product-box--action-cart">
                                            اضافه
                                            سبد
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <partial name="Partials/_Pagination" model="new ResponseModel{Pager = Model.Pager,Parameters = Model.Parameters}" />
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
    {
    <script>
        function SendBrandId(id) {

            var brandIds = $('input:checked').map(function (idx, elem) {
                return $(elem).attr('id');
            }).get();

            var brandCurrents = $('input:checked').map(function (idx, elem) {
                return $(elem).is(":checked");
            }).get();

            var brands = [];
            var indexes = "";

            for (let i = 0; i < brandIds.length; i++) {

                brands.push({ Id: brandIds[i], IsCurrent: brandCurrents[i] });

                indexes += `searchModel.BrandQueryFilters[${i}].Id=${brandIds[i]}&searchModel.BrandQueryFilters[${i}].IsCurrent=${brandCurrents[i]}&`;
            }

            var searchPostData = {
                'BrandQueryFilters': brands,
            };

            window.location.href = "/Products?" + indexes;
        }
    </script>
}
